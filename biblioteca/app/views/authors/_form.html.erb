<% if @author.errors.any? %>
<h2><%= @author.errors.count %> erros encontrado ao salvar autor:</h2>

<ul>
  <% @author.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= simple_form_for @author, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  <%= f.input :name %>
  <%= f.input :birthdate, as: :datetime %>

  <div class="col-sm-offset-3">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Voltar", authors_path, class: "btn btn-default" %>
  </div>
</div>
<% end %>
